<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/AppActionBar</item>
        <item name="android:alertDialogTheme">@style/AppAlertDialog</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/AppActionBar</item>
        <item name="alertDialogTheme">@style/AppAlertDialog</item>
    </style>

    <!-- ActionBar styles -->
    <style name="AppActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/AppActionBarTitleText</item>

        <!-- Support library compatibility -->
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/AppActionBarTitleText</item>
    </style>

    <!-- ActionBar title text style -->
    <style name="AppActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorYellow</item>
    </style>

    <!-- Dialog styles -->
    <style name="AppAlertDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorYellow</item>
        <item name="android:tint">@color/colorYellow</item>

        <!-- Support library compatibility -->
        <item name="background">@color/colorPrimary</item>
        <item name="tint">@color/colorYellow</item>
    </style>

</resources>
