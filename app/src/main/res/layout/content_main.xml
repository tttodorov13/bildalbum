<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridView
            android:id="@+id/imagesGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/inner_margin"
            android:columnWidth="@dimen/grid_column_width"
            android:gravity="center"
            android:horizontalSpacing="@dimen/grid_spacing_horizontal"
            android:numColumns="auto_fit"
            android:stretchMode="spacingWidthUniform"
            android:verticalSpacing="@dimen/grid_spacing_vertical" />

        <ImageView
            android:id="@+id/mainImageView"
            android:layout_width="@dimen/edited_image_size"
            android:layout_height="@dimen/edited_image_size"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/inner_margin"
            android:background="@color/colorPrimary"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_launcher" />

    </LinearLayout>

</RelativeLayout>