<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorYellow"
    android:fitsSystemWindows="true">

    <ScrollView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/signalImageView"
                android:layout_width="@dimen/edited_image_size"
                android:layout_height="@dimen/edited_image_size"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/inner_margin"
                android:background="@color/colorPrimary"
                android:contentDescription="@string/app_name"
                app:srcCompat="@mipmap/ic_launcher" />

            <blog.photo.buildalbum.layout.ExpandableHeightGridView
                android:id="@+id/panesGridView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/inner_margin"
                android:columnWidth="@dimen/grid_column_width"
                android:gravity="center"
                android:horizontalSpacing="@dimen/grid_spacing_horizontal"
                android:isScrollContainer="false"
                android:numColumns="auto_fit"
                android:stretchMode="spacingWidthUniform"
                android:verticalSpacing="@dimen/grid_spacing_vertical" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/progressSpinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <include layout="@layout/spinner_layout" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBottomSingle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin3"
        android:layout_marginRight="@dimen/fab_margin3"
        android:layout_marginBottom="@dimen/fab_margin1"
        android:src="@drawable/ic_vertical_bottom_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="@dimen/fab_icon_max_size" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin2"
        android:layout_marginRight="@dimen/fab_margin2"
        android:layout_marginBottom="@dimen/fab_margin1"
        android:src="@drawable/ic_edit_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="@dimen/fab_icon_max_size" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabTopSingle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin1"
        android:layout_marginRight="@dimen/fab_margin1"
        android:layout_marginBottom="@dimen/fab_margin1"
        android:src="@drawable/ic_vertical_top_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="@dimen/fab_icon_max_size" />

</androidx.constraintlayout.widget.ConstraintLayout>